# ==============================================================================
# CORE APPLICATION CONFIGURATION
# ==============================================================================
# The primary LLM provider to use for all agent operations.
# Options: "azure_openai", "openai", "google_gemini", "anthropic"
# The 'litellm' library will use this to select the correct credentials.
LLM_PROVIDER="azure_openai"

# Sets the global logging level for the application.
# Options: "DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"
# "DEBUG" is verbose for development; "INFO" is standard for production.
LOG_LEVEL="DEBUG"

# ==============================================================================
# AZURE OPENAI CONFIGURATION
# (Used when LLM_PROVIDER is "azure_openai")
# ==============================================================================
AZURE_OPENAI_API_KEY="your_azure_api_key_here"
AZURE_OPENAI_ENDPOINT="https://your-instance-name.openai.azure.com/"
AZURE_OPENAI_API_VERSION="2024-02-01" # Use your actual valid API version
AZURE_OPENAI_DEPLOYMENT_NAME="gpt-4o-mini" # Your deployment ID for the default model

# ==============================================================================
# STANDARD OPENAI CONFIGURATION
# (Used when LLM_PROVIDER is "openai")
# ==============================================================================
# OPENAI_API_KEY="your_openai_api_key_here"

# ==============================================================================
# GOOGLE GEMINI CONFIGURATION
# (Used when LLM_PROVIDER is "google_gemini")
# ==============================================================================
# GOOGLE_GEMINI_API_KEY="your_gemini_api_key_here"

# ==============================================================================
# ANTHROPIC CLAUDE CONFIGURATION
# (Used when LLM_PROVIDER is "anthropic")
# ==============================================================================
# ANTHROPIC_API_KEY="your_anthropic_api_key_here"


# ==============================================================================
# EXTERNAL DATA & SERVICES (Project Specific)
# ==============================================================================
# API Key for a clinical trial data provider like TriNetX or a similar service
# Used by Agent 1.200 for patient population analysis
# TRINETX_API_KEY=your_trinetx_api_key_here

# API Key for a site/investigator database like Citeline
# Used by Agent 1.300 for site performance evaluation
# CITELINE_API_KEY=your_citeline_api_key_here
